  <body>
    <h1 class="title">Acheezable</h1>
    <form action="/acheezements" method="post">
      <div class="dropdown-goals">
        <label id="labelGoal" for="goal">Acheezement
        </label>
        <input id="inputGoal" type="text" name="goal" placeholder="Enter a goal for today">
      </div>

      <div>
        <button id="submitGoal" type="submit">Set Goal</button>
      </div>
      <div>
        <button id="submitCheeze" type="submit" name="cheeze" value="true">Submit Cheeze <i class="fas fa-arrow-circle-right"></i></button>
      </div>
    </form>
  </div>

    <script type="text/javascript" src="../src/indexInterface.js"></script>
  </body>
